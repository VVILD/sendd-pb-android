<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/orderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Business Orders"
        android:textSize="18dp" />


    <TextView
        android:id="@+id/nameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/orderTitle"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="Full Name: Harsh Karanpuria"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/addressLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameLabel"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="Address: A-3 35 green fields JVLR andheri east Mumbai 400093"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/phoneLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addressLabel"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="Phone Number: 9920899602 "
        android:textSize="18sp" />


    <TextView
        android:id="@+id/pickuptimeLable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phoneLabel"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="PickUp Time: 1:30 PM "
        android:textSize="18sp" />

    <ListView
        android:layout_marginTop="10dp"
        android:id="@+id/businesssubordersListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pickuptimeLable"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/bScan_order"
        android:background="@android:color/white" />
    <Button
        android:text="Scan QR Code"
        android:id="@+id/bScan_order"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:background="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        />

</RelativeLayout>